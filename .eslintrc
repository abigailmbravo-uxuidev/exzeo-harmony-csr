{
  "parser": "babel-eslint",
  "extends": ["airbnb"],
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle":  [2, "never"],
    "linebreak-style": [2, "unix"],
    "max-len": [2, { "code": 120, "ignoreComments": true, "ignoreUrls": true }],
    "no-nested-ternary": 0,
    "no-param-reassign": [2, { "props": false }],
    "no-shadow": 1,
    "no-underscore-dangle": [2, { "allow": [ "_id" ] }],
    "no-unused-expressions": 1,
    "prefer-const": 1,
    "import/no-extraneous-dependencies": 2,
    "import/no-deprecated": 1,
    "import/no-named-as-default": 0,
    "import/order": [2, { "newlines-between": "always" }],
    "jsx-a11y/anchor-is-valid": [0, { "aspects": ["noHref", "invalidHref"] }],
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/default-props-match-prop-types": 0,
    "react/forbid-prop-types": 1,
    "react/no-array-index-key": 2,
    "react/no-unused-prop-types": 0,
    "react/prefer-stateless-function": 1,
    "react/prop-types": [2, { "skipUndeclared": true }],
    "react/require-default-props": 1,
    "react/sort-prop-types": [2, { "requiredFirst": true, "callbacksLast": true }],
    "react/jsx-closing-bracket-location": [2, "after-props"],
    "react/jsx-closing-tag-location" : 2,
    "react/jsx-curly-spacing": [ 2, { "when": "never", "attributes": true, "children": true } ],
    "react/jsx-filename-extension": 0,
    "react/jsx-handler-names": [2, { "eventHandlerPrefix": "handle", "eventHandlerPropPrefix": "on"}],
    "react/jsx-indent": [2, 2],
    "react/jsx-max-props-per-line": [2, { "when": "multiline" }]
  },
  "globals": {
    "expect": false,
    "sinon": false
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}