{
  "parser": "babel-eslint",
  "extends": ["react-app"],
  "rules": {
    "arrow-body-style": 0,
    "comma-dangle":  [1, "never"],
    "linebreak-style": [2, "unix"],
    "max-len": [1, { "code": 120, "ignoreComments": true, "ignoreUrls": true, "ignoreTemplateLiterals": true }],
    "no-nested-ternary": 0,
    "no-param-reassign": [2, { "props": false }],
    "no-shadow": 1,
    "no-underscore-dangle": [2, { "allow": [ "_id" ] }],
    "no-unused-expressions": 1,
    "prefer-const": 1,
    "prefer-destructuring": 1,
    "import/prefer-default-export": 0,
    "import/no-extraneous-dependencies": 2,
    "import/no-deprecated": 1,
    "import/no-named-as-default": 0,
    "import/order": [1, { "newlines-between": "always" }],
    "jsx-a11y/anchor-is-valid": [0, { "aspects": ["noHref", "invalidHref"] }],
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/label-has-for": 0,
    "jsx-a11y/href-no-hash": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "react/default-props-match-prop-types": 0,
    "react/forbid-prop-types": 1,
    "react/no-array-index-key": 1,
    "react/no-unused-prop-types": 0,
    "react/prefer-stateless-function": 1,
    "react/prop-types": [1, { "skipUndeclared": true }],
    "react/require-default-props": 1,
    "react/sort-prop-types": [1, { "requiredFirst": true, "callbacksLast": true }],
    "react/jsx-closing-bracket-location": [1, "after-props"],
    "react/jsx-closing-tag-location" : 1,
    "react/jsx-curly-spacing": [ 1, { "when": "never", "attributes": true, "children": true } ],
    "react/jsx-filename-extension": 0,
    "react/jsx-handler-names": [1, { "eventHandlerPrefix": "handle", "eventHandlerPropPrefix": "on"}],
    "react/jsx-indent": [1, 2],
    "react/jsx-max-props-per-line": [1, { "when": "multiline" }]
  },
  "globals": {
    "expect": true,
    "sinon": true,
    "describe": true,
    "it": true
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
